<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout_input_cost"
            android:visibility="gone"
            android:gravity="center"
            >
            <TextView
                android:textSize="@dimen/title_font_size_2"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入"/>

            <EditText
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textSize="@dimen/title_font_size_2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_cost"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout_select"
            android:visibility="visible"
            android:gravity="center">

            <Button
                android:id="@+id/btn_select_left"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_font_size_3"
                android:text="合格">
            </Button>

            <Button
                android:id="@+id/btn_select_right"
                android:layout_marginStart="10dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_font_size_3"
                android:text="不合格">
            </Button>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/view_dialog_buttons" />

</LinearLayout>