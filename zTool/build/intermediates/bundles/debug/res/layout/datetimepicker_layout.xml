<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/css_dialog_background"
    android:minWidth="300.0dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_18"
        android:textStyle="bold" />

    <DatePicker
        android:id="@+id/date_picker"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:calendarViewShown="false" />
    
    <TimePicker
        android:id="@+id/time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="visible" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.01dp"
        android:layout_marginTop="15dp"
        android:background="@color/lightgrey"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_ok_cancel_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/css_dialog_selector_left"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/col_app_label_theme"
            android:textSize="@dimen/font_20" />

        <TextView
            android:id="@+id/txt_btn_divider"
            android:layout_width="0.01dp"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:background="@color/lightgrey"
            android:orientation="vertical"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_ok_cancel_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/css_dialog_selector_right"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/col_app_label_theme"
            android:textSize="@dimen/font_20" />
    </LinearLayout>

</LinearLayout>