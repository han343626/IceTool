<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/card_view_item_common_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:gravity="center_vertical"
        >

        <include
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            layout="@layout/custom_form_item_title_new" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_weight="3"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/view_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_control_height"
                android:layout_marginStart="8dp"
                style="@style/style_textView_single_line"/>

            <ImageView
                android:id="@+id/iv_spn_value"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/img_arrow" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>