<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/card_view_item_common_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        >

        <include
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            layout="@layout/custom_form_item_title_new" />

        <LinearLayout
            android:id="@+id/layout_container"
            android:layout_width="0dip"
            android:layout_height="@dimen/custom_control_height"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_marginStart="8dp"
                android:id="@+id/tv_show"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/style_textView_single_line"
                android:hint="点击选择"/>

            <ImageView
                android:id="@+id/iv_spn_value"
                android:layout_width="18dp"
                android:scaleType="centerInside"
                android:layout_height="18dp"
                android:src="@drawable/img_arrow" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>