<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/card_view_item_common_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/custom_form_item_title" />

        <include
            layout="@layout/item_divider_bold" />

        <RelativeLayout
            android:layout_marginStart="@dimen/custom_control_required_parent_width"
            android:id="@+id/layout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:hint="点击选择"
                android:id="@+id/tv_show"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_control_height"
                style="@style/style_textView_single_line"/>

            <ImageView
                android:id="@+id/iv_spn_value"
                android:layout_marginEnd="5dp"
                android:layout_width="@dimen/custom_control_arrow_size"
                android:layout_height="@dimen/custom_control_arrow_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/img_arrow" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>